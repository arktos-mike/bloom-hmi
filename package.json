{
  "name": "bloom-hmi",
  "productName": "BloomHMI",
  "private": true,
  "version": "0.0.0",
  "description": "HMI for weaving looms",
  "author": "Mike Semyonov <admin@arktos.eu.org>",
  "license": "MIT",
  "main": "dist/electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "build": {
    "extends": null,
    "appId": "com.bloom.hmi",
    "productName": "BloomHMI",
    "asar": true,
    "copyright": "Copyright Â© 2022 ${author}",
    "directories": {
      "output": "release/${version}",
      "buildResources": "electron/resources"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}-Linux-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "electron-store": "^8.0.1",
    "express": "^4.18.1",
    "express-promise-router": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "modbus-serial": "github:yaacov/node-modbus-serial",
    "network": "^0.6.1",
    "pg": "^8.7.3",
    "serialport": "^10.4.0",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@vitejs/plugin-react": "^1.3.2",
    "antd": "^4.21.6",
    "electron": "^19.0.7",
    "electron-builder": "^5.5.0",
    "i18next": "^21.8.14",
    "i18next-fetch-backend": "^5.0.1",
    "i18next-react-native-async-storage": "^1.0.4",
    "less": "^4.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.18.1",
    "react-idle-timer": "^5.4.0",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "react-simple-keyboard": "^3.4.177",
    "react-timer-hook": "^3.0.5",
    "sass": "^1.52.2",
    "simple-keyboard-layouts": "^3.1.155",
    "typescript": "^4.7.3",
    "vite": "^2.9.10",
    "vite-plugin-electron": "^0.6.1"
  },
  "env": {
    "VITE_DEV_SERVER_HOST": "127.0.0.1",
    "VITE_DEV_SERVER_PORT": 7777
  }
}
